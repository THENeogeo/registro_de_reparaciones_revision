<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Nueva Reparación</title>
  <link rel="stylesheet" href="/css/form-listas.css">
</head>
<body>

<header class="top-header">
  <img src="/img/logo.png" alt="Logo STE" class="logo-ste" />
</header>

<div class="logout-wrapper">
  <button
    type="button"
    id="logoutBtn"
    class="btn logout"
    onclick="window.location.href='/dashboard.html'">
    Regresar
  </button>
</div>


<div class="container">
  <h1>Registrar Reparación</h1>

  <% if (success) { %>
    <div class="alert success">
      ¡Reparación registrada con éxito!
    </div>
  <% } %>

  <div class="form-box">
    <form action="/reparaciones" method="post">

      <!-- Tipo de Equipo -->
      <div class="input-box">
        <select id="tipo_equipo" name="tipo_id" required>
          <option value="">-- Selecciona un equipo -- ⬇️</option>
          <% tipos.forEach(tipo => { %>
            <option value="<%= tipo.tipo_id %>"><%= tipo.nombre %></option>
          <% }) %>
        </select>
      </div>

      <!-- Marca -->
      <div class="input-box">
        <select id="marca" name="marca_id" required>
          <option value="">-- Selecciona una marca -- ⬇️</option>
          <!-- Las marcas se cargarán dinámicamente desde el cliente -->
        </select>
      </div>

      <!-- Modelo -->
      <div class="input-box">
        <select id="modelo" name="modelo_id" required>
          <option value="">-- Selecciona un modelo -- ⬇️</option>
        </select>
      </div>

      <!-- Inventario del equipo -->
      <div class="input-box">
        <input
          type="text"
          id="inventario_equipo"
          name="inventario_equipo"
          placeholder="Inventario del equipo"
          maxlength="16"
          oninput="this.value = this.value.replace(/[^0-9\-]/g, '')"
        
        >
      </div>

      <!-- Refacción -->
      <div class="input-box">
        <select id="refaccion" name="refaccion_id" required>
          <option value="">-- Selecciona una refacción -- ⬇️</option>
        </select>
      </div>

      <!-- Tipo de refaccion-->
      <div class="input-box">
        <select id="tipo_refaccion" name="tipo_ref_id" required>
          <option value="">-- Selecciona el tipo de refacción -- ⬇️</option>
          <% tiposRef.forEach(tipo => { %>
            <option value="<%= tipo.tipo_ref_id %>"><%= tipo.nombre %></option>
          <% }) %>
        </select>
      </div>

      <!-- Inventario de refacción -->
      <div class="input-box">
        <input
          type="text"
          id="refaccion_inventario"
          name="refaccion_inventario"
          placeholder="Inventario o código de refacción"
          maxlength="50"
        >
      </div>

      <!-- Descripción -->
      <div class="input-box">
        <textarea
          id="descripcion"
          name="descripcion"
          rows="4"
          placeholder="Descripción de la reparación"
          maxlength="300"
          required
        ></textarea>
      </div>

      <!-- Expediente -->
      <div class="input-box">
        <input
          type="text"
          id="expediente"
          name="expediente"
          placeholder="Expediente del usuario"
          maxlength="5"
          oninput="this.value = this.value.replace(/[^0-9]/g, '')"
        >
      </div>

      <!-- Nombre -->
      <div class="input-box"> 
        <input
          type="text"
          id="nombre"
          name="nombre"
          placeholder="Nombre del usuario"
          maxlength="50"
          oninput="this.value = this.value.replace(/[^A-Za-z ]/g, '')"
        >
      </div>

      <!-- Área -->
      <div class="input-box">
        <select id="area" name="area_id" required>
          <option value="">-- Selecciona un área -- ⬇️</option>
          <% areas.forEach(a => { %>
            <option value="<%= a.area_id %>"><%= a.nombre %></option>
          <% }) %>
        </select>
      </div>

      <button type="submit" class="btn">Guardar reparación</button>
    </form>
  </div>
</div>

<!-- Script para cargar marcas dinámicamente -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const tipoSelect = document.getElementById('tipo_equipo');
    const marcaSelect = document.getElementById('marca');

    if (!tipoSelect || !marcaSelect) {
      console.error('No se encontró el select de tipo o marca en el DOM');
      return;
    }

    tipoSelect.addEventListener('change', async function () {
      const tipoId = this.value;

      if (!tipoId) {
        marcaSelect.innerHTML = '<option value="">Selecciona un tipo primero</option>';
        return;
      }

      marcaSelect.innerHTML = '<option value="">Cargando marcas...</option>';

      try {
        console.log(`Consultando marcas para tipo_id: ${tipoId}`);
        const response = await fetch(`/marcas/${tipoId}`);

        if (!response.ok) {
          throw new Error(`Error HTTP: ${response.status}`);
        }

        const marcas = await response.json();
        console.log('Marcas recibidas:', marcas);

        if (!Array.isArray(marcas)) {
          throw new Error('Respuesta inesperada del servidor');
        }

        marcaSelect.innerHTML = '<option value="">-- Selecciona una marca -- ⬇️</option>';

        marcas.forEach(marca => {
          const option = document.createElement('option');
          option.value = marca.marca_id;
          option.textContent = marca.nombre;
          marcaSelect.appendChild(option);
        });

      } catch (error) {
        console.error('Error cargando marcas:', error.message || error);
        marcaSelect.innerHTML = '<option value="">Error al cargar</option>';
      }
    });
  });

  //Script para cargar los modelos dinámicamente
  document.getElementById('marca').addEventListener('change', async function () {
    const marcaId = this.value;
    const modeloSelect = document.getElementById('modelo');
    
    if (!marcaId) {
      modeloSelect.innerHTML = '<option value="">Selecciona una marca primero</option>';
      return;
    }

    try {
      modeloSelect.innerHTML = '<option value="">Cargando modelos...</option>';
      const response = await fetch(`/modelos/${marcaId}`);
      if (!response.ok) throw new Error('Fallo al cargar modelos');

      const modelos = await response.json();

      modeloSelect.innerHTML = '<option value="">-- Selecciona un modelo -- ⬇️</option>';
      modelos.forEach(modelo => {
        const option = document.createElement('option');
        option.value = modelo.modelo_id;
        option.textContent = modelo.nombre;
        modeloSelect.appendChild(option);
      });
    } catch (error) {
      console.error('Error cargando modelos:', error);
      modeloSelect.innerHTML = '<option value="">Error al cargar</option>';
    }
  });  
</script>

<script>
  // Script para cargar refacciones dinámicamente según tipo de equipo
  document.getElementById('tipo_equipo').addEventListener('change', async function () {
    const tipoId = this.value;
    const refaccionSelect = document.getElementById('refaccion');

    if (!tipoId) {
      refaccionSelect.innerHTML = '<option value="">Selecciona un tipo primero</option>';
      return;
    }

    try {
      refaccionSelect.innerHTML = '<option value="">Cargando refacciones...</option>';
      const response = await fetch(`/refacciones/${tipoId}`);
      if (!response.ok) throw new Error('Fallo al cargar refacciones');

      const refacciones = await response.json();

      refaccionSelect.innerHTML = '<option value="">-- Selecciona una refacción -- ⬇️</option>';
      refacciones.forEach(ref => {
        const option = document.createElement('option');
        option.value = ref.refaccion_id;
        option.textContent = ref.nombre;
        refaccionSelect.appendChild(option);
      });
    } catch (error) {
      console.error('Error cargando refacciones:', error);
      refaccionSelect.innerHTML = '<option value="">Error al cargar</option>';
    }
  });
</script>
</body>
</html>
