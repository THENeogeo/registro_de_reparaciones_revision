<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Lista de Reparaciones</title>
  <link rel="stylesheet" href="/css/form-reparacion.css">
  <style>
    .search-bar-wrapper {
      display: flex;
      justify-content: flex-end;
      margin-top: 20px;
      padding: 0 40px;
    }

    .search-bar {
      background-color: #ffffff;
      border-radius: 12px;
      padding: 20px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      display: flex;
      flex-wrap: wrap;
      gap: 15px;
      max-width: 1000px;
    }

    .search-bar input,
    .search-bar select {
      flex: 1;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 8px;
      font-size: 14px;
      min-width: 150px;
    }

    .search-bar button {
      padding: 10px 20px;
      background-color: #27f50b;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-weight: bold;
      transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .search-bar button:hover {
      background-color: #5b7ede;
      transform: translateY(-2px);
    }

    .form-box {
      padding: 40px;
      max-height: 500px;
      overflow-y: auto;
    }

    .input-box {
      position: relative;
      margin: 20px 0;
      background: #f9f9f9;
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.05);
      transition: transform 0.3s ease;
    }

    .input-box:hover {
      transform: translateY(-3px);
      background: #f1f3f5;
    }

    h1 {
      text-align: center;
      font-size: 32px;
      color: #ffffff;
      padding-top: 30px;
    }

    .container {
      width: 800px;
      max-width: 95%;
      background: #4361ee;
      border-radius: 30px;
      box-shadow: 0 0 30px rgba(0, 0, 0, 0.2);
      overflow: hidden;
    }
  </style>
</head>
<body>

<header class="top-header">
  <img src="/img/logo.png" alt="Logo STE" class="logo-ste" />
</header>

<div class="logout-wrapper">
  <button type="button" class="btn logout" onclick="window.location.href='/dashboard.html'">Regresar</button>
</div>

<div class="container">
  <h1>Reparaciones Registradas</h1>

  <!-- Barra de filtro con selects dinámicos -->
  <div class="search-bar-wrapper">
    <form action="/reparaciones/lista" method="GET" class="search-bar">
      <select name="tipo_equipo">
        <option value="">Equipo</option>
        <% tipos.forEach(t => { %>
          <option value="<%= t.tipo_equipo %>" <%= (t.tipo_equipo === (typeof tipo_equipo !== 'undefined' ? tipo_equipo : '')) ? 'selected' : '' %>>
            <%= t.tipo_equipo %>
          </option>
        <% }) %>
      </select>

      <select name="marca">
        <option value="">Marca</option>
        <% marcas.forEach(m => { %>
          <option value="<%= m.marca %>" <%= (m.marca === (typeof marca !== 'undefined' ? marca : '')) ? 'selected' : '' %>>
            <%= m.marca %>
          </option>
        <% }) %>
      </select>

      <select name="modelo">
        <option value="">Modelo</option>
        <% modelos.forEach(mod => { %>
          <option value="<%= mod.modelo %>" <%= (mod.modelo === (typeof modelo !== 'undefined' ? modelo : '')) ? 'selected' : '' %>>
            <%= mod.modelo %>
          </option>
        <% }) %>
      </select>

      <select name="inventario_equipo">
        <option value="">Inventario</option>
        <% inventarios.forEach(inv => { %>
          <option value="<%= inv.inventario_equipo %>" <%= (inv.inventario_equipo === (typeof inventario_equipo !== 'undefined' ? inventario_equipo : '')) ? 'selected' : '' %>>
            <%= inv.inventario_equipo %>
          </option>
        <% }) %>
      </select>
      
      <input 
        type="date" 
        name="fecha_inicio" 
        value="<%= typeof fecha_inicio !== 'undefined' ? fecha_inicio : '' %>" 
        placeholder="Fecha inicio" 
      />

      <input 
        type="date" 
        name="fecha_fin" 
        value="<%= typeof fecha_fin !== 'undefined' ? fecha_fin : '' %>" 
        placeholder="Fecha fin" 
      />

      <select name="area">
        <option value="">Área</option>
        <% areas.forEach(a => { %>
          <option value="<%= a.area %>" <%= (a.area === (typeof area !== 'undefined' ? area : '')) ? 'selected' : '' %>>
            <%= a.area %>
          </option>
        <% }) %>
      </select>

      <button type="submit">Buscar</button>
    </form>
  </div>

  <div class="form-box">
    <% if (reparaciones.length === 0) { %>
      <div class="alert success">No hay reparaciones registradas.</div>
    <% } else { %>
      <% reparaciones.forEach(rep => { %>
        <div class="input-box">
          <p><strong>Tipo de Equipo:</strong> <%= rep.tipo_equipo %></p>
          <p><strong>Marca:</strong> <%= rep.marca %></p>
          <p><strong>Modelo:</strong> <%= rep.modelo %></p>
          <p><strong>Inventario Equipo:</strong> <%= rep.inventario_equipo %></p>
          <p><strong>Refacción:</strong> <%= rep.nombre_refaccion %></p>
          <p><strong>Inventario Refacción:</strong> <%= rep.inventario_refaccion %></p>
          <p><strong>Descripción:</strong> <%= rep.descripcion_reparacion %></p>
          <p><strong>Fecha:</strong> <%= rep.fecha_reparacion.toLocaleDateString() %></p>
          <p><strong>Usuario:</strong> <%= rep.nombre_usuario %></p>
          <p><strong>Expediente Usuario:</strong> <%= rep.expediente_usuario %></p>
          <p><strong>Área:</strong> <%= rep.area_usuario %></p>
        </div>
      <% }) %>
    <% } %>
  </div>
</div>

</body>
</html>
